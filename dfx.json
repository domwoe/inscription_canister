{
  "canisters": {
    "backend": {
      "type": "rust",
      "candid": "backend/backend.did",
      "gzip": true,
      "package": "backend"
    },
    "schnorr_canister": {
      "type": "rust",
      "candid": "schnorr_canister/schnorr_canister.did",
      "gzip": true,
      "package": "schnorr_canister"
    },
    "frontend": {
      "dependencies": ["backend"],
      "type": "assets",
      "frontend": {
        "entrypoint": "dist/index.html"
      },
      "source": ["dist/"]
    }
  },
  "networks": { 
    "local": {
      "bind": "localhost:4943",
      "type": "ephemeral",
      "bitcoin": {
        "enabled": true,
        "nodes": [
          "0.0.0.0:18444"
        ],
        "log_level": "error"
      }
    }
  },
  "output_env_file": ".env",
  "version": 1
}
